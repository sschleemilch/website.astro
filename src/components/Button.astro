---
import { Icon } from "astro-icon/components";
interface Props {
    color: string;
    icon?: string | undefined;
    href: string;
    iconRight?: boolean | undefined;
}

if (Astro.props.iconRight === undefined) {
    Astro.props.iconRight = false;
}

const { color, href, icon, iconRight } = Astro.props;
---

<a
    href={href}
    class=`h-10 px-5 py-2.5 gap-1.5 inline-flex items-center justify-center whitespace-nowrap text-sm font-medium bg-${color} dark:bg-${color}Dark text-bg dark:text-bgDark hover:opacity-75`
>
    {icon && !iconRight && <Icon name={icon} class="text-base" />}
    <slot />
    {icon && iconRight && <Icon name={icon} class="text-base" />}
</a>
