---
import { Icon } from "astro-icon/components";
interface Props {
    color: string;
    icon?: string | undefined;
    href: string;
    iconRight?: boolean | undefined;
}

const { color, href, icon, iconRight = false } = Astro.props;
---

<a
    href={href}
    class="inline-flex items-center justify-center gap-2 rounded-4xl bg-black px-4 py-2 text-sm/6 font-semibold text-white dark:bg-gray-700 dark:hover:bg-gray-600"
>
    {icon && !iconRight && <Icon name={icon} class="text-base" />}
    <slot />
    {icon && iconRight && <Icon name={icon} class="text-base" />}
</a>
