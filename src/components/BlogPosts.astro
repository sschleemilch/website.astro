---
interface Props {
  posts: object;
  tagFilter?: string | undefined;
}
import BlogPostCard from "@components/BlogPostCard.astro";
const { posts, tagFilter } = Astro.props;
---

<div
  class="mx-auto mt-10 grid max-w-2xl gap-x-8 gap-y-16 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none grid-cols-1 lg:grid-cols-3"
>
  {posts.map((post) => <BlogPostCard post={post} tagFilter={tagFilter} />)}
</div>
