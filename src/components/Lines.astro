---
interface Props {
    after?: boolean;
    before?: boolean;
    add?: string[];
}

const { after = true, before = true, add = [] } = Astro.props;

let classes = ["relative"].concat(add);

if (after) {
    classes = classes.concat([
        "after:-left-[100vw]",
        "after:absolute",
        "after:bottom-0",
        "after:h-px",
        "after:w-[200vw]",
        "dark:after:bg-white/10",
    ]);
}
if (before) {
    classes = classes.concat([
        "before:-left-[100vw]",
        "before:absolute",
        "before:top-0",
        "before:h-px",
        "before:w-[200vw]",
        "dark:before:bg-white/10",
    ]);
}
---

<div class:list={classes}>
    <slot />
</div>
